            {# script modal nouvel meme #}
        <script>function modal(bouton){
            var mod = document.getElementsByClassName("modal");
            
            id=bouton.id.split('n')[1];
            id='modal'+id
            let currentModal = document.getElementById(id);

            if (currentModal.style.display == "block"){
                currentModal.style.display = "none";
                if(id=='modal1'){
                    bouton.innerHTML = 'nouvel meme';
                }else if(id=='modal2'){
                    bouton.innerHTML = 'modifier le profil';
                }else if(id=='modal3'){
                    bouton.innerHTML = 'couleur de profil';
                }
                
            }else{
                
                currentModal.style.display = "block";
                bouton.innerHTML = 'quitter';
                let i
                for ( i=0; i< mod.length; i++) {
                    if(mod[i].id!=id){
                        mod[i].style.display = 'none';
                        let btnID = mod[i].id.split('l')[1];
                        let btn = document.getElementById('myBtn'+btnID);
                        if(mod[i].id=='modal1'){
                            btn.innerHTML = 'nouvel meme';
                        }else if(mod[i].id=='modal2'){
                            btn.innerHTML = 'modifier le profil';
                        }else if(mod[i].id=='modal3'){
                            btn.innerHTML = 'couleur de profil';
                        }
                    }
                }
            }




            }
        </script>

