{% extends "user/profil.html.twig" %}

{% block title %}
    Sujets notés | {{ parent()}}
{% endblock %}
{% block meta %} 
    <meta name="description" 
        content="Le site d'entraide entre developpeur, dans une idée de partage et de progression en toute solidarité ." 
    /> 
    <meta name="robots" 
        content="index,follow" 
    /> 
{% endblock %}
{% block mainProfil %}
    <hr>
    <h1>subjects notés {{user.noteSubjects | length}}</h1>
    <div class="d-flex ">
        {% for subject in user.noteSubjects %}
            <div class="swiper-slide overflow-y card">
                {% include "Components/_subjectSwiper.html.twig" with { subject: subject.subject} %}
            </div>
        {% endfor %}
    </div>    
{% endblock %}