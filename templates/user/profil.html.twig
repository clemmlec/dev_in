                        {% set nbVote = 0 %}
                        {% for row in follow.friend.subjects %}
                            {% for note in row.noteSubjects %}
                                {% set moyenne = moyenne + note.note %}
                                {% set nbVote = nbVote +1 %}
                            {% endfor %}
