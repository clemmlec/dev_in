{% extends 'base.html.twig' %}

{% block title %}login | {{ parent() }}{% endblock %}
{% block meta %} 
    <meta name="description" 
        content="Connect toi à Dev In et rejoint la communautée !" 
    /> 
    <meta name="robots" 
        content="index,follow"
    /> 
{% endblock %}
{% block body %}
    <section class="register vh100">
        <form class="form large centrer" action="{{path('login')}}"  method="POST" >
            <h1 class="Lobster">Connexion</h1>
            {% if error %}
                <div class="alert alert-danger w-80" >
                    <h1>{{ error.messageKey|trans(error.messageData, 'security')}}</h1>
                </div>
            {% endif %}
            <hr>
            <div class="form-ligne">
                <input type="text" id="username" class="form-control" name="_username" value="{{ lastUsername }}" placeholder="email"/>
            </div>
            <div class="form-ligne">
                <input type="password" id="password" class="form-control" name="_password" placeholder="password" value="1234"/>
            </div>
            <hr>
            <div class="mb-4">
                <button type="submit" class="btn buttonEmpty">Se connecter</button> <br>
                <a class="mb-4" href="{{path('app_forgot_password_request')}}">mot de passe oublié ?</a>
            </div>
        </form>
    </section>
{% endblock %}
