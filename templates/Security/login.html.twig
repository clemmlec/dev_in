{% extends 'base.html.twig' %}

{% block title %}login | {{ parent() }}{% endblock %}

{% block body %}
    <section class="register">
        <form class="form" action="{{path('login')}}"  method="POST" >
            <h1 class="Lobster">Se connecter</h1>
            {% if error %}
                <div class="" >
                    <h1>{{ error.messageKey|trans(error.messageData, 'security')}}</h1>
                </div>
            {% endif %}
            <hr>
            <div class="form-ligne">
                <input type="text" id="username" class="form-control" name="_username" value="{{ lastUsername }}" placeholder="email"/>
            </div>
            <div class="form-ligne">
                <input type="password" id="password" class="form-control" name="_password" placeholder="password"/>
            </div>
            <hr>
            <div class="mb-4">
                <button type="submit" class="btn btn-primary">Se connecter</button> <br>
                <a class="mb-4" href="{{path('app_forgot_password_request')}}">mot de passe oubli√© ?</a>
            </div>
        </form>
    </section>
{% endblock %}
