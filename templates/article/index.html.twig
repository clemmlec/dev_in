{% extends 'base.html.twig' %}

{% block title %}
    Page article | {{ parent()}}
{% endblock %}
{% block meta %} 
    <meta name="description" 
        content="Tous nos articles sur le développement pour progresser plus vite en programmation grâce à une communautée solidaire et bienveillante." 
    /> 
    <meta name="robots" 
        content="index,follow"
    /> 
{% endblock %}

{% block body %}

<section class="w-100 js-filter">

    {# formulaire de recherche #}
    {{ form_start(form, { 'attr' : { 'class' : 'js-filter-form formEdit'} }) }}
        <div class="loader">
            <div class="js-loading" role="status" aria-hidden="true" style="display: none">
                <span class=""><i class="fa-solid fa-spinner fa-spin-pulse"></i></span>
            </div>
        </div>
        {{ form_row(form.query, { 'attr' : { 'class' : 'formSearch', 'placeholder' : 'Rechercher dans l\'article' , 'autofocus' : 'autofocus'} }) }}
    {{ form_end(form, {'render_rest': false }) }}

    {# pagination liste des articles #}
    <div class="js-filter-count">
        {% include "Components/filter/_count.html.twig" %}
    </div>

    <div class="js-filter-content d-flex">
        {% include "Components/_articles.html.twig" with { couper : "couper"} %}
    </div>

    <div class="d-flex  js-filter-pagination">
        {% include "Components/filter/_pagination.html.twig" %}
    </div>


</section>

{% endblock %}
