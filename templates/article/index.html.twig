{% extends 'base.html.twig' %}

{% block title %}
    Page article | {{ parent()}}
{% endblock %}
{% block meta %} 
    <meta name="description" 
        content="Tous nos articles sur le développement pour progresser plus vite en programmation grâce à une communautée solidaire et bienveillante." 
    /> 
    <meta name="robots" 
        content="index,follow"
    /> 
{% endblock %}
{% block body %}
<section class="w-80">
    <div class="d-flex">
        {{ knp_pagination_render(articles) }}
        {{ articles.getTotalItemCount }}
        {{ articles.getTotalItemCount > 1 ? 'articles' : 'article'}}
    </div>
    {% for article in articles %}
        {% include "Components/_article.html.twig" with { couper: "" } %}
    {% endfor %}
    <div class="d-flex">
        {{ knp_pagination_render(articles) }}
        {{ articles.getTotalItemCount }}
        {{ articles.getTotalItemCount > 1 ? 'articles' : 'article'}}
    </div>
</section>
{% endblock %}
