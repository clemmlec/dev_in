{% extends 'base.html.twig' %}

{% block title %}
    Page article | {{ parent()}}
{% endblock %}
{% block meta %} 
    <meta name="description" 
        content="Tous nos articles sur le développement pour progresser plus vite en programmation grâce à une communautée solidaire et bienveillante." 
    /> 
    <meta name="robots" 
        content="index,follow"
    /> 
{% endblock %}
{% block body %}
<section class="w-80 js-filter">

    {{ form_start(form, { 'attr' : { 'class' : 'js-filter-form formEdit'} }) }}
        {{ form_row(form.query, { 'attr' : { 'class' : 'formSearch', 'placeholder' : 'Rechercher dans l\'article' } }) }}

        {# <button class="btn-vierge" type="submit">Rechercher</button> #}
    {{ form_end(form, {'render_rest': false }) }}

    <div class="js-filter-count">
        {% include "Components/filter/_count.html.twig" %}
    </div>

    <div class="js-filter-content">
        {% include "Components/_articles.html.twig" %}
    </div>

    <div class="d-flex  js-filter-pagination">
        {% include "Components/filter/_pagination.html.twig" %}
    </div>


</section>
{% endblock %}
