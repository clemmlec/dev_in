{% extends "base.html.twig" %}

{% block title %}
    Page d'accueil | {{ parent()}}
{% endblock %}
{% block meta %} 
    <meta name="description" 
        content="Le site d'entraide entre developpeur, dans une idée de partage et de progression en toute solidarité ." 
    /> 
    <meta name="robots" 
        content="index,follow" 
    /> 
{% endblock %}
{% block body %}
<section class="w-100">
    <div id="home">
        <div class="header bleu">
            <h1 class="lobster">Dev In</h1>
            <h2><em>Entraide entre devs</em></h2>
            {% if app.user %}
            {% else %}
                <button class="btn-inscription"><a  href="{{ path('register') }}">Incription</a></button>
                <button class="btn-inscription"><a  href="{{ path('login') }}">Connexion</a></button>
            {% endif %}
        </div>
    </div>
</section>


    <section class="w-100 paralax">
        {% for subject in subjects %}
            <div class="swiper-slide overflow-y card paralaxCard">
                {{ include('Components/_subjectSwiper.html.twig' )}}   
            </div>
        {% endfor %}
        
    </section>
    <section class="w-80 h2">
        <p class="bottom">Retrouve des <a href="{{ path('app_article_index') }}">articles sur le développement</a>  rédigé par nos administrateurs <br>
            Ansi que des <a href="{{ path('app_subject_index') }}">sujets postés</a> pas nos adhérents
        </p>
        <div class="bottom background purpleGradient"></div>
    </section>

    
        <div class="titre">
            <h2 class="titreHome"> Derniers articles</h2>
            <div class="backround bleuGradient"></div>
        </div>
    <section class="w-100 mt-10">   
        {# {% include "Components/_article.html.twig" with { couper: "couper" } %} #}
        <div class="swip ">
            <div class="swiper mySwiper">
                <div class="swiper-wrapper">
                {% for article in articles %}
                    <div class="swiper-slide overflow-y articleCard">
                        {% include "Components/_article.html.twig" with { couper: 'couper'} %}
                    </div>
                {% endfor %}
                </div>
                <div class="swiper-pagination"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>

            <div class="titre">
                <h2 class="titreHome">Derniers sujets</h2>
                <div class="backround bleuGradient"></div>
            </div>
            <div class="swiper mySwiper mt-5">
                <div class="swiper-wrapper">
                {% for subject in subjects %}
                    <div class="swiper-slide overflow-y card">
                        {{ include('Components/_subjectSwiper.html.twig' )}}   
                    </div>
                {% endfor %}
                </div>
                <div class="swiper-pagination"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
        </div>
    </section>
{% endblock %}

